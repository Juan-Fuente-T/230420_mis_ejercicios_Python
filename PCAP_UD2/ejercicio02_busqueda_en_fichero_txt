fichero = open("Quijote.txt", mode="r", encoding="utf-8")
contenido = fichero.read()
contenido_upper = contenido.upper()
fichero.close()

palabra = input ("Dime una palabra: ")
palabra_upper = palabra.upper()

if len(palabra)<=2:
    print("La palabra es demasiado corta")
else:
    print(f"Se ha encontrado la palabra {palabra} {contenido_upper.count(palabra)} veces")
